# Fields
%rs2  20:5
%rs1  15:5
%rd    7:5
%l     7:1

# immediates:
%imm_i    20:s12
%imm_s    25:s7 7:5
%imm_u    20:12
%imm_us   15:5
%imm_s6   20:s5 25:1
%imm_u6   20:5 25:1

# Argument sets
&i       imm rs1 rd      !extern
&r       rd  rs1 rs2     !extern
&s       imm rs1 rs2     !extern
&lhl_i   imm l
&lhl_r   rs1 l
&shl_i   imm imms l
&shl_r   rs1 imm  l
&r2      rd rs1          !extern

# Formats
@i         ............   ..... ... .....  ....... &i      imm=%imm_i      %rs1 %rd
@r         .......  ..... ..... ... .....  ....... &r                 %rs2 %rs1 %rd
@s         .......  ..... ..... ... .....  ....... &s      imm=%imm_s %rs2 %rs1
@lhl_i     ............   ..... ... .... . ....... &lhl_i  imm=%imm_u                     %l
@lhl_r     ............   ..... ... .... . ....... &lhl_r                  %rs1           %l
@shl_i     ............   ..... ... .... . ....... &shl_i  imm=%imm_u      imms=%imm_us   %l
